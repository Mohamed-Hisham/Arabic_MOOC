= form_for [:admin, @course, @section], html: {class: "form-horizontal"} do |s|
  - if @section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = s.label "Section Title", class: "col-sm-2 control-label"
    .col-sm-10
      = s.text_field :title, class: "form-control"

  .actions
    = s.submit 'Save', class: "btn btn-default"
