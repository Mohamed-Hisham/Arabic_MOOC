.row
  .container-fluid
    .col-md-6
      %h3 All courses
    .col-md-6
      = link_to "Create Course", new_admin_course_path, class: "btn btn-success"
.row
  .container-fluid
    - unless @courses.nil?
      %table{class: "table table-condensed table-hover table-striped"}
        - @courses.each do |c|
          %tr
            %td= link_to c.title, admin_course_path(c)
            %td= link_to "Delete", admin_course_path(c), method: :delete, data: {confirm: "Do you want to delete?"}

    - else
      No courses !