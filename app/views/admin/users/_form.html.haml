= form_for [:admin, @user], html: {class: "form-horizontal"} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this tutor from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label "User name", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :user_name, class: "form-control", placeholder: "User name"

  .form-group
    = f.label "First name", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :first_name, class: "form-control", placeholder: "First name"

  .form-group
    = f.label "Last name", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :last_name, class: "form-control", placeholder: "Last name"

  .form-group
    = f.label "Email", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :email, class: "form-control", placeholder: "Email"

  .form-group
    = f.label "Password", class: "col-sm-2 control-label"
    .col-sm-10
      = f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password"

  .form-group
    = f.label "Password Confirmation", class: "col-sm-2 control-label"
    .col-sm-10
      = f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "Password Confirmation"

  .form-group
    = f.label "Date of Birth", class: "col-sm-2 control-label"
    .col-sm-8
      .input-group.date{id:"datetimepicker"}
        = f.text_field :dob, class: "form-control", data: {behaviour: :datepicker}
        %span{class:"input-group-addon"}
          %span{class: "fa fa-calendar"}

  .form-group
    = f.label "Gender", class: "col-sm-2 control-label"
    .col-sm-10
      .radio
        .col-md-2
          %label{value: :female}
            = f.radio_button :gender,:female
            Female
        .col-md-2
          %label{value: :male}
            = f.radio_button :gender,:male
            Male

  .form-group
    = f.label "Occupation", class: "col-sm-2 control-label"
    .col-sm-10
      = f.select :occupation, User::OCCUPATION, class: "form-control", include_blank: true

  .form-group
    = f.label "Work Place", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :work_place, class: "form-control", placeholder: "Work place (e.g. University, Organisation, Company)"

  .form-group
    = f.label "Upload your Avatar", class: "col-sm-2 control-label"
    .col-sm-10
      = f.file_field :avatar, class: "form-control"

  .actions
    = f.submit 'Save'
