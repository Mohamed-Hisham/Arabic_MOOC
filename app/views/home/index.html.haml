    .col-md-3.col-sm-6.hero-feature
      .thumbnail.well
        = image_tag c.avatar.home_thumb.url, class: "img-thumbnail"
        .caption
          %h3= c.title
          %h6 Length: #{humanize_secs c.length}
          %h6 Level: #{c.level}
          .row
            = image_tag c.tutor.avatar.browse_thumb.url, class: "img-circle pull-right"
